{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "service/assessment-service/Dockerfile",
      "serviceRoot": "service/assessment-service"
    },
    "deploy": {
      "startCommand": "sh -lc 'python -m uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8080}'",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 300
    }
  }
  